<Window x:Class="DuongWPF.Login.WindowRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuongWPF.Login"
        mc:Ignorable="d"
        Title="WindowRegister" Height="350" Width="500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#3A8DFF" Offset="0" />
                <GradientStop Color="#FFFFFF" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Border CornerRadius="10" Background="White" Padding="20">
                <StackPanel>
                    <Button Content="Đăng kí nhân viên" Background="#3A8DFF" Foreground="White" Padding="10" Margin="0,0,0,10" Click="staff_Click"/>
                    <Button Content="Đăng kí khách hàng" Background="#3A8DFF" Foreground="White" Padding="10" Margin="0,0,0,10" Click="Customer_Click"/>

                    <!-- Changed Register Button to TextBlock -->
                    <TextBlock Text="Trở lại trang đăng nhập" Foreground="Gray" TextDecorations="Underline" HorizontalAlignment="Center" Margin="0,10,0,0" Cursor="Hand" MouseLeftButtonUp="Login_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>

